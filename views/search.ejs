<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/dashboardHeader.css">
    <link rel="stylesheet" href="/css/card.css">
    <title>Document</title>
</head>
<body>
    
    <div class="board">
        <div class="card-container">
            <% if(searchResults != '') { %>
                <% searchResults.forEach(function(card, index) { %>
                    <div class="card">
                        <div class="top-section">
                            <a class="card-title" href="/dashboard/item/<%= card._id %>"><%= card.title %></a>
                            <div class="icon-box">
                                <img class="chat-icon" src="./access/icon/icons8-chat-room-30 (1).png" alt="">
                            </div>
                        </div>
                        <div class="middle-section">
                            <div class="person">
                                <div class="person-title">ผู้รับผิดชอบ:</div>
                                <div class="person-icon">
                                    <%= card.responsiblePerson %>
                                </div>
                            </div>
                            <div class="dead-line">
                                <div class="dead-line-title">กำหนดส่ง:</div>
                                <div class="date-calender"><%= card.deadline %></div>
                            </div>
                            <div class="status">
                                <div class="status-tile">สถานะ:</div>
                                <div class="status-now"><%= card.workstatus %></div>
                            </div>
                        </div>
                    </div>

               <% }) %>
         <% } else { %>
            <p>ไม่พบการ์ด.</p>
         <% } %>
        </div>
    </div>

</body>
</html>